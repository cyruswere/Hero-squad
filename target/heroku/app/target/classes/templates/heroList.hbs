{{#partial "content"}}

    <div class="jumbotron hero p-3 p-md-5 text-white rounded bg-dark">

    </div>

    <div class="my-3 p-3 bg-white rounded box-shadow">
        <h1>List of Registered Heroes!</h1>
        {{#if heroes}}
            <h6 class="border-bottom border-gray pb-2 mb-0">Current Heroes</h6>
            {{#each heroes }}
                <div class="media text-muted pt-3">
                    <img data-src="holder.js/32x32?theme=thumb&bg=007bff&fg=007bff&size=1" alt="" class="mr-2 rounded">
                    <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                        <div class="d-flex justify-content-between align-items-center w-100">
                            <strong class="text-gray-dark">{{ name }}</strong>
                            <a href="/heroes/{{id}}">View Details</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        {{else}}
            <h6 class="border-bottom border-gray pb-2 mb-0">No Heroes to display</h6>
        {{/if}}

    </div>
    <div>
        <p><a class="btn btn-warning" href="/heroes/new">Create new hero</a></p>
    </div>



{{/partial}}

{{> layout.hbs}}