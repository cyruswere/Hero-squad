{{#partial "content"}}
    <section class="landing-pg">
        <div class="land-left">
        </div>
        <div class="land-right">
        </div>

        <div class="row">
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <div class="squad">
                            <div id="newMember">
                                <p class="close">&cross;</p>
                                <h2 class="card-text">Choose Squad Members</h2>
                                {{#each heroes}}
                                    <div class="hero-item">
                                        <img src="/image/cap.jpeg" alt="">
                                        <div class="hero-detail">
                                            <p class="card-text">Name: {{name}}</p>
                                            <p class="card-text">Super power: {{ power }}</p>
                                            <a class="btns" href="/squad/new/{{id}}">Add To Squad</a>
                                        </div>
                                    </div>
                                {{/each}}
                            </div>
                            <h2 class="card-text">
                                <a class="btns" href="/squad-form">Create Your Squad</a>
                            </h2>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
               <div class="card">
                   <div class="card-body">
                       <br><br>
                       {{#if squads}}
                           <h2>
                               AVAILABLE SQUADS
                           </h2>
                           {{#each squads}}
                               <div class="squad-cont">
                                   <img src="" alt="">
                                   <div>
                                       <h1>{{ squadName }} </h1>
                                       <p class="card-text">Id: {{squadId}}</p>
                                       <p class="card-text">Purpose: {{cause}}</p>
                                       <p class="card-text">Max participants: {{ size }}</p>
                                       <h3 class="card-text">MEMBERS</h3>
                                       <a class="btns" href="/new/member/{{squadId}}">Bind Id</a>
                                       <button class="addMember add-btn" ><a href="/form">Add New Member</a></button>
                                       {{#each squadMembers}}
                                           <div class="member-cont">
                                               <h1>{{ squadName }} </h1>
                                               <p class="card-text">Id: {{squadId}}</p>
                                               <p class="card-text">Purpose: {{cause}}</p>
                                               <h5 class="card-text">Name: {{this.name}}</h5>
                                               <h5 class="card-text">Power: {{power}}</h5>
                                               <Button class="btns">Remove</Button>
                                           </div>
                                       {{/each}}


                                   </div>
                               </div>
                           {{/each}}
                       {{else}}
                           <h2 class="card-text">Please create a squad to continue</h2>
                       {{/if}}
                   </div>
               </div>
            </div>
        </div>
    </section>
{{/partial}}
{{> layout.hbs}}