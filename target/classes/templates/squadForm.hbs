{{#partial "content"}}
    <div class="hero-form">
        </br>
        </br>
        </br>
        </br>
        </br>

    {{#if editSquad}}
            <h1>Edit Squad Name</h1>
        <form action="/squads/new" method="post">
            <div class="form-group">
                <label for="content">Edit Squad name</label>
                <input id="name" name="name" type="text" value="{{editSquad.name}}">
            </div>
            <button type="submit" class="btn btn-warning">Edit!</button>
        </form>

    {{else}}
            <h1>Add a new Squad</h1>
        <form action="/squads/new" method="post">
            <div class="form-group">
                <label for="name">Suqad name</label>
                <div class="col-sm-10">
                    <input id="name" class="form-control" name="name" type="text">
                </div>
            </div>
            <div class="form-group">
                <label for="size" >Squad Size</label>
                <div class="col-sm-10">
                    <input id="size" class="form-control" name="size" type="text">
                </div>
            </div>

            <div class="form-group">
                <label for="cause">Squad Caues</label>
                <div class="col-sm-10">
                    <input id="cause" class="form-control" name="cause" type="text">
                </div>
            </div>
            <button type="submit" class="btn btn-warning">Create!</button>
        </form>
    </div>

    {{/if}}
{{/partial}}

{{> layout.hbs}}